<!-- fragment_wardrobe.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WardrobeFragment">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/wardrobeNavigationView"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

    <FrameLayout
        android:id="@+id/wardrobeFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/wardrobeNavigationView">
        <!-- This FrameLayout will be used to display the selected fragment -->
    </FrameLayout>

</RelativeLayout>
